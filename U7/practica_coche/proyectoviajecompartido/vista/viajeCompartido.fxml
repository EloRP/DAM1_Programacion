                    <TextField fx:id="campoHora2" prefHeight="25.0" prefWidth="27.0" />
                  </children>
                </HBox>
                <HBox prefHeight="32.0" prefWidth="95.0" spacing="10.0">
                  <children>
                    <TextField fx:id="campopuntoLlegada1" prefHeight="25.0" prefWidth="54.0" />
                    <TextField fx:id="campopuntoLlegada2" prefHeight="25.0" prefWidth="58.0" />
                  </children>
                </HBox>
                <HBox prefHeight="32.0" prefWidth="133.0" spacing="10.0">
                  <children>
                    <TextField fx:id="campopuntoSalida1" prefHeight="25.0" prefWidth="52.0" />
                    <TextField fx:id="campopuntoSalida2" prefHeight="25.0" prefWidth="56.0" />
                  </children>
                </HBox>
                <TextField fx:id="campoPlazas" />
              </children>
            </VBox>
          </children>
        </HBox>
        <Button fx:id="crearViaje" layoutX="533.0" layoutY="329.0" mnemonicParsing="false" onAction="#crearViaje" prefHeight="25.0" prefWidth="90.0" text="Crear viaje!" />
      </children>
    </AnchorPane>
  </children>
</VBox>
