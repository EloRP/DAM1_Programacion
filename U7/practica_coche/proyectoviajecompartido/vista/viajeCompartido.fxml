<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0"
  xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="practica_coche.proyectoviajecompartido.controller.controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <HBox layoutX="15.0" layoutY="19.0" prefHeight="322.0" prefWidth="617.0">
          <children>
            <VBox prefHeight="334.0" prefWidth="191.0" spacing="21.0">
              <children>
                <Label text="Conductor" />
                <Label prefHeight="17.0" prefWidth="140.0" text="Fecha de salida" />
                <Label prefHeight="17.0" prefWidth="140.0" text="Hora de salida" />
                <Label text="Punto de llegada" />
                <Label text="Punto de salida" />
                <Label prefHeight="8.0" prefWidth="33.0" text="Plazas" />
              </children>
            </VBox>
            <VBox prefHeight="146.0" prefWidth="188.0" spacing="9.0">
              <children>
                <TextField fx:id="campoconductor" />
                <DatePicker fx:id="campoFecha" prefHeight="25.0" prefWidth="194.0" />
                <HBox prefHeight="32.0" prefWidth="95.0" spacing="10.0">
                  <children>
                    <TextField fx:id="campoHora1" prefHeight="25.0" prefWidth="24.0" />
